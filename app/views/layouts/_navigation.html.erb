<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  
  <div class="nav_item">
    <%= link_to('New Post', new_post_path, class: "btn btn-success") if logged_in? %> 
  </div>
  

 

  <div class="btn-group nav_item">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Categories <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <% Category.all.each do |cat| %>
        <li><%= link_to cat.name, category_path(cat) %></li>
      <% end %>
      <% if logged_in? %>
        <li class="divider"></li>
        <li>
          <%=link_to(new_category_path) do %>
            <i class="icon-plus"></i>
            New Category
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if logged_in? %>
    
    <div class="btn-group nav_item">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <%= current_user.username %> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" >
        
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class="icon-pencil"></i>
                edit
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
            <i class="icon-user"></i>
                view profile
            <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
            <i class="icon-circle-arrow-right"></i>
                logout
            <% end %>
          </li>
        </ul>
          
    </div>

  <% else %>
    <div class="nav_item">
        <%= link_to 'Login', login_path, class: "btn" %>
        <%= link_to 'Signup', register_path, class: "btn" %> 
    </div>
  
  <% end %>




</ul>
