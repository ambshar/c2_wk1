<% if @user.errors.any? %>

<%= render 'shared/errors', object: @user %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  
  <p/>


  <%= f.submit(@user.new_record? ? "Sign up" : "Update Profile", class: 'btn btn-primary') %>

<% end %>