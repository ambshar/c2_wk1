<% if @user.errors.any? %>

<%= render 'shared/errors', object: @user %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :time_zone %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  
  
  <p/>


  <%= f.submit(@user.new_record? ? "Sign up" : "Update Profile", class: 'btn btn-primary') %>

<% end %>