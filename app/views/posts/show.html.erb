

<h4><%= @post.title %></h4>
<small><span class="quiet"> By </span> <%= link_to @post.creator.username, user_path(@post.creator) %> 
   at <%= display_datetime(@post.created_at) %> </small>
<p/>
<p/>
<%= @post.description %>



<p/>

<%= link_to "Edit", edit_post_path(@post) if (@post.creator == current_user) %>
<%= link_to "Back", posts_path(@post) %>


 


<%= form_for [@post, @comment] do |f| %>
 <%= render 'shared/errors', object: @comment %>
 <div class='control-group'>
    <%= f.label :body, 'Leave a comment' %>
    <%= f.text_area :body, rows: 3, class: "span4" %>
  </div>
  
  <% if current_user %>
    <%= f.submit 'Create Comment', class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Login to comment', login_path, class: "btn btn-primary" %>
  <% end %> 

<% end %>

<h5>Comments:</h5>

<% @post.comments.each do |comment| %>

  <div class="well span8">
    <em>"<%= comment.body %>" </em>
    <br/>
    <span class="quiet"> By </span> <%= link_to comment.creator.username, user_path(comment.creator) %> 

  <small> at <%= display_datetime(comment.created_at) %> </small>
    <small><%= link_to "edit", edit_post_comment_path(@post, comment) if (comment.creator == current_user) %></small>

  </div>




<% end %>