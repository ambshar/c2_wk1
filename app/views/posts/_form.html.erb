<% if @post.errors.any? %>
<div class="alert alert-danger">
  <% @post.errors.full_messages.each do |msg| %>
  <%= msg %>
  <% end %>
</div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <p/>
  <%= f.submit "Create", class: 'btn btn-primary' %>

  <% end %>