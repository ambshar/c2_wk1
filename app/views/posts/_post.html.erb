<div class="row">
  <div class="well span0 text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'> </i>
      
      <% end %>
    <% end %>
    <br/>
    <%= pluralize(post.total_votes, "vote") %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'> </i>
      
      <% end %>
    <% end %>
  </div>


  <div class="well span8">
    <%= render post.categories %>
    
    <h5> <%= link_to post.title, fix_url(post.url) %> </h5> 
    <span class="quiet"> posted by </span> <%= link_to post.creator.username, user_path(post.creator) %> 
    <small> at <%= display_datetime(post.created_at) %> </small>
    <p/>
    <%= link_to pluralize("#{post.comments.size}","comment"), post_path(post) %>
  </div>
</div>